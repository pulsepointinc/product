rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'bweinstein@pulsepoint.com';
    }
    
    // Conversations collection - users can only access their own conversations
    match /conversations/{conversationId} {
      // Allow read if user owns the conversation
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Allow create if user is authenticated and userId matches their auth.uid
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Allow update/delete if user owns the conversation
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Messages subcollection - users can only access messages in their own conversations
      match /messages/{messageId} {
        // Allow read/write if user owns the parent conversation
        allow read, write: if request.auth != null && 
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
      }
    }
    
    // User permissions collection - admin only
    match /user_permissions/{permissionId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      // Allow users to read their own permission
      allow read: if request.auth != null && 
                     resource.data.email == request.auth.token.email;
    }
    
    // Usage tracking collection - admin can read all, users can write their own
    match /usage_tracking/{usageId} {
      allow read: if isAdmin();
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}

